#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <behaviors/mouse_keys.dtsi>

#define U_MOUSE_MOVE_MAX 1400                     /* <--- New max speed setting (default: 600) */
#undef MOVE_UP
#undef MOVE_DOWN
#undef MOVE_LEFT
#undef MOVE_RIGHT
#define MOVE_UP MOVE_Y(-U_MOUSE_MOVE_MAX)
#define MOVE_DOWN MOVE_Y(U_MOUSE_MOVE_MAX)
#define MOVE_LEFT MOVE_X(-U_MOUSE_MOVE_MAX)
#define MOVE_RIGHT MOVE_X(U_MOUSE_MOVE_MAX)

&mmv {
	time-to-max-speed-ms = <400>;             /* <--- How long time until max speed is reached (default: 500) */
};

#define U_MOUSE_SCROLL_MAX 100                    /* <--- New max speed setting (default: 10) */

#undef SCROLL_UP
#undef SCROLL_DOWN
#undef SCROLL_LEFT
#undef SCROLL_RIGHT
#define SCROLL_UP SCROLL_Y(U_MOUSE_SCROLL_MAX)
#define SCROLL_DOWN SCROLL_Y(-U_MOUSE_SCROLL_MAX)
#define SCROLL_LEFT SCROLL_X(-U_MOUSE_SCROLL_MAX)
#define SCROLL_RIGHT SCROLL_X(U_MOUSE_SCROLL_MAX)

&mwh {
  time-to-max-speed-ms = <500>;                 /* <--- How long time until max speed is reached */
};

/ {
    chosen {
        zmk,physical-layout = &foostan_corne_6col_layout;

        // zmk,physical-layout = &foostan_corne_5col_layout;
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "DSEND";

            // --------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&none  &kp X           &kp C           &kp L               &kp F             &kp V          &kp SEMICOLON  &kp SQT            &kp U                &kp P            &kp Q            &none
&none  &mt LEFT_GUI R  &mt LEFT_ALT S  &mt LEFT_CONTROL N  &mt LEFT_SHIFT T  &kp G          &kp COMMA      &mt RIGHT_SHIFT A  &mt RIGHT_CONTROL E  &mt RIGHT_ALT H  &mt RIGHT_GUI I  &none
&none  &kp Z           &kp W           &kp M               &kp D             &kp B          &kp PERIOD     &kp O              &kp Y                &kp K            &kp J            &none
                                       &lt 3 DELETE        &lt 1 BACKSPACE   &lt 2 ENTER    &lt 6 TAB      &lt 4 SPACE        &lt 5 ESCAPE
            >;
        };

        Numbers {
            display-name = "NUM";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &kp ASTERISK  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp MINUS  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp SLASH     &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp PLUS   &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans        &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp EQUAL  &trans
                        &trans  &trans  &trans    &kp TILDE     &kp KP_NUMBER_0  &kp DOT
            >;
        };

        Symbols {
            display-name = "SYM";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &kp LEFT_BRACE    &kp AMPS              &kp PIPE               &kp UNDERSCORE  &kp RIGHT_BRACE    &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp QUESTION      &kp DOLLAR            &kp PERCENT            &kp CARET       &kp BSLH           &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp LEFT_BRACKET  &kp EXCLAMATION       &kp AT_SIGN            &kp HASH        &kp RIGHT_BRACKET  &trans
                        &trans  &trans  &trans    &kp GRAVE         &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
            >;
        };

        Function {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &kp PRINTSCREEN  &kp F7     &kp F8     &kp F9  &kp F12  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp SCROLLLOCK   &kp F4     &kp F5     &kp F6  &kp F11  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp PAUSE_BREAK  &kp F1     &kp F2     &kp F3  &kp F10  &trans
                        &trans  &trans  &trans    &kp TAB          &kp SPACE  &kp K_APP
            >;

            label = "FUN";
        };

        Navigation {
            bindings = <
&trans  &kp PAGE_UP    &kp HOME        &kp UP_ARROW  &kp END          &kp INSERT       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp PAGE_DOWN  &kp LEFT_ARROW  &kp DOWN      &kp RIGHT_ARROW  &kp CAPSLOCK     &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp LG(Z)      &kp LG(X)       &kp LG(C)     &kp LG(V)        &kp LG(LS(Z))    &trans  &trans  &trans  &trans  &trans  &trans
                                       &kp DELETE    &kp BACKSPACE    &kp RETURN       &trans  &trans  &trans
            >;

            label = "NAV";
        };

        Media {
            bindings = <
&trans  &trans        &trans        &kp C_VOLUME_UP    &trans            &trans        &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans        &kp C_PREV    &kp C_VOLUME_DOWN  &kp C_NEXT        &trans        &trans  &trans  &trans  &trans  &trans  &trans
&trans  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2       &bt BT_SEL 3      &bt BT_CLR    &trans  &trans  &trans  &trans  &trans  &trans
                                    &kp C_MUTE         &kp C_PLAY_PAUSE  &kp C_STOP    &trans  &trans  &trans
            >;

            label = "MEDIA";
        };

        Mouse {
            bindings = <
&trans  &msc SCROLL_UP    &msc SCROLL_LEFT  &mmv MOVE_UP    &msc SCROLL_RIGHT  &mkp MB5       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &msc SCROLL_DOWN  &mmv MOVE_LEFT    &mmv MOVE_DOWN  &mmv MOVE_RIGHT    &mkp MB4       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp LG(Z)         &kp LG(X)         &kp LG(C)       &kp LG(P)          &kp LG(LS(Z))  &trans  &trans  &trans  &trans  &trans  &trans
                                            &mkp MCLK       &mkp LCLK          &mkp RCLK      &trans  &trans  &trans
            >;

            label = "MOUSE";
        };
    };
};
